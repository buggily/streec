<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground_splash</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/ic_launcher_background_splash</item>
        <item name="windowSplashScreenBackground">@color/ic_launcher_background_splash</item>
    </style>

    <style name="Theme.Splash.AppWidgetContainerParent" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="appWidgetRadius">@dimen/widget_radius</item>
        <item name="appWidgetInnerRadius">@dimen/widget_radius_inner</item>
    </style>

    <style name="Theme.Splash.AppWidgetContainer" parent="Theme.Splash.AppWidgetContainerParent">
        <item name="appWidgetPadding">@dimen/widget_padding</item>
    </style>
</resources>
